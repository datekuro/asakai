<div class="row">
  <div class="col-lg-4 col-md-6 col-sm-8 ml-auto mr-auto mt-5">
    <%= form_for(resource, as: resource_name, url: invitation_path(resource_name), html: { method: :put }) do |f| %>
    <div class="card">
      <div class="card-header ">
          <h4 class="card-title text-center">ニックネーム・パスワード<br>設定</h4>
      </div>
      <div class="card-body">
        <%= f.hidden_field :invitation_token, readonly: true %>

        <% if f.object.class.require_password_on_accepting %>
          <div class="form-group">
            <%= f.label :nickname %>
            <%= f.text_field :nickname, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label :password %>
            <%= f.password_field :password, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label :password_confirmation, value: "パスワード（確認）" %>
            <%= f.password_field :password_confirmation, class: 'form-control' %>
          </div>
        <% end %>
        <%= render "devise/shared/error_messages", resource: resource %>
      </div>

      <div class="card-footer actions">
        <%= f.submit t("devise.invitations.edit.submit_button"), class: 'btn btn-primary btn-block' %>
      </div>
    </div>
  <% end %>
  </div>
</div>
